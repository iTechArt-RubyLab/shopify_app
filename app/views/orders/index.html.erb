<h1>All Orders</h1>

<table>
  <thead>
  <tr>
    <th>Order ID</th>
    <th>Name</th>
    <th>Total Price</th>
    <th>Created At</th>
    <th>Updated At</th>
  </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.name %></td>
      <td><%= order.total_price %></td>
      <td><%= order.created_at %></td>
      <td><%= order.updated_at %></td>
      <td><%= link_to 'Удалить', order_path(order), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
